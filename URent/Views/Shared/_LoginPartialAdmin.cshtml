@if (@HttpContext.Current.Session["NameAdmin"] != null)
{
    using (Html.BeginForm("LogOff", "AdminAccount", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + @HttpContext.Current.Session["NameAdmin"].ToString() + "!", "Manage", "AdminAccount", routeValues: null, htmlAttributes: new { title = "User account" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "AdminAccount", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "AdminAccount", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
